<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="@android:color/white"
    tools:context=".SignUpNameActivity">


    <ImageView
        android:id="@+id/tv_label_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/txt_logo"
        android:text="Wasapii"/>



    <TextView
        android:id="@+id/tv_label_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Add a profile photo"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:text="This is the first thing people around you will see
about you"/>



    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_80dp"
        android:src="@drawable/camera"
        android:layout_gravity="center_horizontal"
        android:id="@+id/profile_pic"
        android:layout_marginTop="10dp" />



    <Button
         android:id="@+id/btn_upload_pic"
         android:layout_marginTop="10dp"
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:text="Add photo"
         android:textColor="@color/light_blue"
         android:paddingLeft="20dp"
         android:paddingRight="20dp"
         android:textAllCaps="false"
         android:layout_gravity="center_horizontal"
         android:background="@drawable/rounded_blue_transparent_btn"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:padding="10dp"-->
        <!--android:text="Not now"/>-->


    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_blue_btn"
        android:layout_gravity="right"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_redirectToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="@color/light_blue"
            android:text="Already have an account? Log in"/>


    </LinearLayout>


</LinearLayout>
